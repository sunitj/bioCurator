# Application Configuration
APP_MODE=development  # development | production | hybrid
LOG_LEVEL=INFO       # DEBUG | INFO | WARNING | ERROR
PORT=8080
METRICS_PORT=9090

# Safety Controls
MAX_COST_BUDGET=0.0  # Maximum cost in USD (0.0 for development)
RATE_LIMIT_PER_MINUTE=30
CIRCUIT_BREAKER_THRESHOLD=0.5  # Error rate threshold (0.0-1.0)
CIRCUIT_BREAKER_WINDOW=300  # Rolling window in seconds
CIRCUIT_BREAKER_MIN_VOLUME=10  # Minimum requests before evaluation

# Model Configuration
MODEL_PROVIDER=ollama  # ollama | cloud
OLLAMA_HOST=http://localhost:11434

# Cloud Model API Keys (Production only)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=

# Database Configuration
REDIS_URL=redis://localhost:6379/0
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=
POSTGRES_URL=postgresql://user:password@localhost:5432/biocurator
QDRANT_URL=http://localhost:6333

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Development Settings
ENABLE_DEBUG=false
ENABLE_PROFILING=false
ENABLE_HOT_RELOAD=false

# Security
SECRET_KEY=change-me-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Paths
DATA_PATH=/data
LOG_PATH=/logs
CONFIG_PATH=/app/configs